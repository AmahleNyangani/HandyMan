@model List<HandyMan.ViewModel.UsersViewModel>
@{
    ViewData["Title"] = "Details";
}


<main class="main">
      <div id="page-content-wrapper">
       <div class="container-fluid">
            <div class="table table-hover">
                <div class="row">
                    <div class="col-md-3 font-weight-bold d-none d-md-block">Name</div>
                    <div class="col-md-3 font-weight-bold d-none d-md-block">Surname</div>
                    <div class="col-md-3 font-weight-bold d-none d-md-block">Position</div>
                    <div class="col-md-3 font-weight-bold d-none d-md-block">Occupation</div>

                </div>
                      @if (Model.Any())
                            {
                                foreach (var details in Model)
                                {
                        <div class="row">
                            <div class="col-md-3">
                                    @details.name
                            </div>
                            <div class="col-md-3">
                                @details.surname
                            </div>
                            <div class="col-md-3">
                                @details.occupation
                            </div>
                            <div class="col-md-3">
                              @details.position
                            </div>

                        </div>
             }
             }
            </div>
         </div>
      </div>
</main>