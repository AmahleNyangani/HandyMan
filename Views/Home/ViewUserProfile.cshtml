@model HandyMan.ViewModel.UsersViewModel

@{
    ViewData["Title"] = "Service Provider's Profile";
}

<main class="main">
    <div aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
         <li class="breadcrumb-item"><a href="@Url.Action("GetUsers", "Home", new { type = "Electrician" })">Service Providers</a></li>
            <li class="breadcrumb-item"><a href="#">Service Provider's Profile</a></li>
        </ol>
    </div>
    <br />

    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-edit"></i> Service Provider's Profile
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <!-- Profile Picture -->
                        <img src="~/Images/HandyMan.png" alt="Profile Picture" class="img-thumbnail mb-3" style="max-width: 200px;">
                    </div>
                    <div class="col-md-8">
                        <div class="form-horizontal">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label font-weight-bold">Full Name</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@Model.name</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label font-weight-bold">Last Name</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@Model.surname</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label font-weight-bold">ID number</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@Model.idNumber</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label font-weight-bold">Gender</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@Model.gender</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label font-weight-bold">Service Type</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@Model.occupation</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label font-weight-bold">Location</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@Model.organization</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label font-weight-bold">Working hours</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@Model.position</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label font-weight-bold">Email</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@Model.email</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label font-weight-bold">Comment</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">@Model.comment</p>
                                </div>
                            </div>
                        </div>
                        <div class="text-right mt-3">
                            <button id="submitButton" type="submit" class="btn btn-primary">Hire Provider</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
