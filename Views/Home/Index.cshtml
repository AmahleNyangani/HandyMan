@model HandyMan.ViewModel.UsersViewModel
@{
    ViewBag.Title = "Handyman Services - Welcome";  
}

<main class="main">
    <header class="hero-section">
        <div class="hero-overlay">
            <div class="container text-center text-white">
                <h1 class="display-4">Welcome to HandyMan Services</h1>
                <p class="lead">Your trusted partner for home repairs and improvements.</p>
                <a href="#services" class="btn btn-light btn-lg">Explore Our Services</a>
            </div>
        </div>
    </header>

    <section id="services" class="container text-center my-5">
        <h2 class="mb-4">Our Services</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <h3>Plumbing</h3>
                    <p>Expert plumbing services for any issue.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <h3>Electrical</h3>
                    <p>Reliable electrical repairs and installations.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <h3>Painting</h3>
                    <p>Professional painting services for a fresh look.</p>
                </div>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</main>